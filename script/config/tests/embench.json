{
  "$schema": "./tests.schema.json",
  "_comment": "Embench-IoT Benchmark Configuration",
  "_description": "Embedded benchmark suite from embench.org - integer-only tests",

  "test_list": "embench",

  "simulation": {
    "max_cycles": 50000,
    "timeout_seconds": 300,
    "build_threads": "auto",
    "sim_threads": 16
  },

  "comparison": {
    "enabled": false,
    "spike_enabled": false
  },

  "defines": {
    "COMMIT_TRACER": true,
    "KONATA_TRACER": false,
    "LOG_COMMIT": true,
    "LOG_RAM": false,
    "LOG_UART": true,
    "LOG_BP": true,
    "SIM_FAST": true,
    "SIM_UART_MONITOR": true
  },

  "trace": {
    "enabled": false,
    "format": "fst"
  },

  "build": {
    "mode": "release"
  },

  "custom_options": {
    "description": "Embench benchmark specific options",
    "uart_log_enabled": true,
    "uart_log_path": "embench_output.log",
    "test_directory": "build/tests/embench/mem",
    "build_directory": "build/tests/embench"
  }
}
