	@echo -e "$(CYAN)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"
	@echo -e "$(CYAN)  Logging Flags (from JSON)$(RESET)"
	@echo -e "$(CYAN)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"
	@echo -e "  Commit trace    : $(COMMIT_LOG_JSON)"
	@echo -e "  BP log          : $(BP_LOG_JSON)"
	@echo -e "  RAM log         : $(RAM_LOG_JSON)"
	@echo -e "  UART log        : $(UART_LOG_JSON)"
	@echo -e "  Fast sim        : $(FAST_SIM_JSON)"
	@echo -e "$(CYAN)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"
	@echo -e "$(CYAN)  SystemVerilog Defines$(RESET)"
	@echo -e "$(CYAN)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"
	@echo -e "  $(SV_DEFINES)"
	@echo -e "$(CYAN)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"

# Build Verilator model
build: dirs
	@echo -e "$(GREEN)[VERILATOR BUILD]$(RESET) Mode: $(MODE), Threads: $(BUILD_THREADS)"
	@echo -e "$(CYAN)[INFO]$(RESET) Defines: $(SV_DEFINES)"
	$(VERILATOR) \
		$(SV_SOURCES) $(LOGGER_SRC) \
		$(VERILATOR_COMMON_FLAGS) \
		$(VERILATOR_BUILD_FLAGS) \
		$(NO_WARNING) \
		$(SV_DEFINES)
	@echo -e "$(GREEN)[SUCCESS]$(RESET) Binary: $(RUN_BIN)"

# Run simulation
run: build
	@echo -e "$(GREEN)[RUN SIMULATION]$(RESET) Test: $(TEST_NAME)"
	@$(PYTHON) $(VERILATOR_RUNNER) $(RUNNER_ARGS)
ifeq ($(ENABLE_SPIKE),1)
	@echo -e "$(CYAN)[SPIKE]$(RESET) Running Spike golden reference..."
	@$(MAKE) -f Makefile.verilator run-spike TEST_NAME=$(TEST_NAME)
endif
ifeq ($(ENABLE_COMPARE),1)
	@echo -e "$(CYAN)[COMPARE]$(RESET) Comparing RTL and Spike logs..."
	@$(MAKE) -f Makefile.verilator compare-logs TEST_NAME=$(TEST_NAME)
endif
ifeq ($(ENABLE_HTML_REPORT),1)
	@echo -e "$(CYAN)[REPORT]$(RESET) Generating HTML report..."
	@$(MAKE) -f Makefile.verilator html-report TEST_NAME=$(TEST_NAME)
endif

# Clean build artifacts
clean:
	@echo -e "$(RED)[CLEAN]$(RESET) Removing build artifacts..."
	@rm -rf "$(OBJ_DIR)"
	@rm -rf "$(LOG_DIR)/verilator"
	@echo -e "$(GREEN)[DONE]$(RESET) Clean complete"

# Open waveform
wave:
	@if [ -f "$(VERILATOR_LOG)/waveform.fst" ]; then \
		echo -e "$(CYAN)[WAVE]$(RESET) Opening GTKWave..."; \
		gtkwave "$(VERILATOR_LOG)/waveform.fst" & \
	else \
		echo -e "$(RED)[ERROR]$(RESET) Waveform not found: $(VERILATOR_LOG)/waveform.fst"; \
	fi

# ============================================================
# Spike Integration and Comparison
# ============================================================
.PHONY: run-spike compare-logs html-report generate-dashboard

# Run Spike golden reference
run-spike:
	@echo -e "$(CYAN)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"
	@echo -e "$(CYAN)  Running Spike Golden Reference$(RESET)"
	@echo -e "$(CYAN)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"
	@# Find ELF and address files
	@ELF_FILE=$$(find $(MEM_DIRS) -name "$(TEST_NAME).elf" -o -name "$(TEST_NAME)" | head -1); \
	if [ -z "$$ELF_FILE" ]; then \
		echo -e "$(RED)[ERROR]$(RESET) ELF file not found for test: $(TEST_NAME)"; \
		exit 1; \
	fi; \
	ADDR_FILE=$$(dirname $$ELF_FILE)/../pass_fail_addr/$(TEST_NAME)_addr.txt; \
	SPIKE_LOG=$(VERILATOR_LOG)/spike_commit.log; \
	DEBUG_CMD=$(VERILATOR_LOG)/spike_debug.cmd; \
	if [ -f "$$ADDR_FILE" ]; then \
		PASS_ADDR=$$(head -1 $$ADDR_FILE | awk '{print $$1}'); \
		echo -e "$(YELLOW)[INFO]$(RESET) PASS address: $$PASS_ADDR"; \
		echo "until pc 0 $$PASS_ADDR" > $$DEBUG_CMD; \
		echo "quit" >> $$DEBUG_CMD; \
		spike -d --debug-cmd=$$DEBUG_CMD \
			--isa=$(SPIKE_ISA) --pc=$(SPIKE_PC) --priv=$(SPIKE_PRIV) \
			-l --log-commits $$ELF_FILE > $$SPIKE_LOG 2>&1; \
	else \
		echo -e "$(YELLOW)[WARN]$(RESET) Address file not found, running Spike without breakpoint"; \
		spike --isa=$(SPIKE_ISA) --pc=$(SPIKE_PC) --priv=$(SPIKE_PRIV) \
			-l --log-commits $$ELF_FILE > $$SPIKE_LOG 2>&1; \
	fi; \
	SPIKE_LINES=$$(wc -l < $$SPIKE_LOG); \
	echo -e "$(GREEN)[SUCCESS]$(RESET) Spike simulation complete ($$SPIKE_LINES commits)"

# Compare RTL and Spike logs
compare-logs:
	@echo -e "$(CYAN)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"
	@echo -e "$(CYAN)  Comparing RTL and Spike Logs$(RESET)"
	@echo -e "$(CYAN)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"
	@RTL_LOG=$(VERILATOR_LOG)/commit_trace.log; \
	SPIKE_LOG=$(VERILATOR_LOG)/spike_commit.log; \
	DIFF_LOG=$(VERILATOR_LOG)/diff.log; \
	if [ ! -f "$$RTL_LOG" ]; then \
		echo -e "$(RED)[ERROR]$(RESET) RTL log not found: $$RTL_LOG"; \
		exit 1; \
	fi; \
	if [ ! -f "$$SPIKE_LOG" ]; then \
		echo -e "$(RED)[ERROR]$(RESET) Spike log not found: $$SPIKE_LOG"; \
		exit 1; \
	fi; \
	DUMP_FILE=$$(find $(MEM_DIRS) -name "$(TEST_NAME).dump" | head -1); \
	ADDR_FILE=$$(find $(MEM_DIRS) -name "$(TEST_NAME)_addr.txt" | head -1); \
	CMD="$(PYTHON) $(SCRIPT_DIR)/python/makefile/compare_logs.py \
		--rtl $$RTL_LOG \
		--spike $$SPIKE_LOG \
		--output $$DIFF_LOG \
		--test-name $(TEST_NAME)"; \
	if [ -n "$$DUMP_FILE" ]; then CMD="$$CMD --dump $$DUMP_FILE"; fi; \
	if [ -n "$$ADDR_FILE" ]; then CMD="$$CMD --addr $$ADDR_FILE"; fi; \
	eval $$CMD; \
	if [ $$? -eq 0 ]; then \
		echo -e "$(GREEN)[SUCCESS]$(RESET) Logs match!"; \
	else \
		echo -e "$(RED)[FAILURE]$(RESET) Logs differ - see $$DIFF_LOG"; \
		exit 1; \
	fi

# Generate HTML report for single test
html-report:
	@echo -e "$(CYAN)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"
	@echo -e "$(CYAN)  Generating HTML Report$(RESET)"
	@echo -e "$(CYAN)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"
	@DIFF_LOG=$(VERILATOR_LOG)/diff.log; \
	if [ ! -f "$$DIFF_LOG" ]; then \
		echo -e "$(YELLOW)[WARN]$(RESET) diff.log not found, running comparison first..."; \
		$(MAKE) -f Makefile.verilator compare-logs TEST_NAME=$(TEST_NAME); \
	fi; \
	HTML_REPORT=$(VERILATOR_LOG)/test_report.html; \
	$(PYTHON) $(SCRIPT_DIR)/python/makefile/html_diff_generator.py \
		--diff-log $$DIFF_LOG \
		--output $$HTML_REPORT \
		--test-name $(TEST_NAME); \
	echo -e "$(GREEN)[SUCCESS]$(RESET) HTML report: $$HTML_REPORT"

